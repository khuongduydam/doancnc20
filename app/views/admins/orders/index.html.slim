section.layout-adminorder
  .container
    .row
      .main-adminproduct
        .page-title
          h1.page-header.pull-left
            i.fa.fa-tachometer
            |
            = t('layouts.admins.index.orders')
        .row.main-body
          .col-md-12.bodyad
            = form_tag admins_orders_path, :method => 'get', :id => "orders_search" do
                = text_field_tag :search, params[:search], placeholder: t('layouts.admins.index.search_order'), class: 'form-control search'
            br
            = render 'admins/form/index_order'
javascript:
 $('#search').keyup(function(){
   val = $(this).val();
   $.ajax({
     type:'get',
     url: '/en/admins/orders',
     dataType:'json',
     data: {search: val},
     success: function(data){
       $('tbody').empty();
       $.each(data.data,function(key,value){
         $('tbody').append("<tr class='danger'><td class='text-center'>"+value.name+"</td><td class='text-center'>"+value.address+"</td><td class='text-center'>"+value.phone+"</td><td class='text-center'>"+value.email+"</td><td class='text-center' style='color:red;'>"+value.status+"</td><td class='text-center' style='color:red;'>"+value.pay_type+"</td><td class='text-center' style='color:red;'>"+value.total_price+"</td><td class='text-center'><div class='btn-group'><a href='/#{params[:locale]}/admins/orders/"+value.id+"' class='btn btn-info btn-xs'>Detail</a><a href='/#{params[:locale]}/admins/orders/"+value.id+"/edit' class='btn btn-warning btn-xs'>Edit</a><a data-confirm='Are you sure?' data-method='delete' href='/#{params[:locale]}/admins/orders/"+value.id+"' class='btn btn-danger btn-xs'>Delete</a></div></td></tr>")
       })
     }
   });
 })