.container
  .table-responsive
    table.table
      thead
        tr.danger
          th.text-left.col-md-2 Ten San Pham
          th.text-left.col-md-1 So luong
          th.text-left.col-md-1 Gia
          th.text-left.col-md-1 Thanh tien
          th.text-center.col-md-6 Ghi chu
          th.text-right.col-md-1 Tong cong
      tbody
        - @order.order_items.map do |item|
          tr.info
            td.text-left.col-md-2 = item.product.name
            td.text-left.col-md-1 = item.quantity
            td.text-left.col-md-1 = item.product.price
            td.text-left.col-md-1 = item.total_price 
            td.text-left.col-md-1
            td.text-right.col-md-1[style="color:red"] = @order.total_price
.text-center  
  = link_to 'Back',:back, class:'btn btn-default'            