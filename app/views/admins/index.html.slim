//section.layout-admin
  .container[style="width:102%;margin: -18% 0 0 20%;padding:0px;"]
    .row[style="margin:0px;"]
      .main-admin
        .row[style="margin:0px;"]
          .main-body
            h3.us 
              i.fa.fa-folder-open
              | 
              = t('layouts.admins.index.categories')              
            #categories
              = render 'admins/category'
            h3.us 
              i.fa.fa-tachometer
              |
              = t('layouts.admins.index.products')              
            #products
              = render 'admins/product'
            h3.us 
              i.fa.fa-file
              |
              = t('layouts.admins.index.newspaper')              
            #infos
              = render 'admins/newspaper'
            h3.us 
              i.fa.fa-user
              |
              = t('layouts.admins.index.users')              
            #users
              = render 'admins/user'
            h3.us
              i.fa.fa-handshake-o
              |
              = t('layouts.admins.index.contacts')              
            #contact  
              = render 'admins/contact'
            h3.us
              i.fa.fa-handshake-o
              |
              = t('layouts.admins.index.orders')              
            #order  
              = render 'admins/order'  
            h3.us 
              i.fa.fa-handshake-o
              |
              = t('layouts.admins.index.order_members')              
            #order_member  
              = render 'admins/order_member'
.container
  h1 Admin Dashboard 
  .row.first
    .col-xs-6.col-md-6
      .order
        i.fa.fa-shopping-basket
        .orders
          h3
            - if Order.all.size == 0
              | 0 normal order
            - else
              = Order.all.size > 1 ? "#{Order.all.size} normal orders" : "1 normal order"
          h3
            - if OrderMember.all.size == 0
              | 0 member order
            - else  
              = OrderMember.all.size > 1  ? "#{OrderMember.all.size} member orders" : "1 member order"
          h3 
            - if @complete_orders == 0
              | 0 success order
            - else
              = @complete_orders > 1 ? "#{@complete_orders} success orders" : "1 success order"
          h3
            - if @uncomplete_orders == 0
              | 0 pending order
            - else
              = @uncomplete_orders > 1 ? "#{@uncomplete_orders} pending orders" : "1 pending order"
    .col-xs-6.col-md-6
      .category
        i.fa.fa-users
        .users.text-right
          h3
            = User.all.size > 1 ? "#{User.all.size} users registered" : "1 user registered"
          h3
            = current_user.username
            |  is online   
          h3
            | Last login: 
            = current_user.last_sign_in_at.strftime('%m/%Y')
          h3
            | Last login ip: 
            = current_user.last_sign_in_ip
  .row.second
    .col-xs-6.col-md-6
      .newspaper
        i.fa.fa-newspaper-o
        .info
          h3
            - if Newspaper.all.size == 0
              | 0 newspaper
            - else  
              = Newspaper.all.size > 1 ? "#{Newspaper.all.size} newspapers" : "1 newspaper"
          h3
            - if Contact.all.size == 0
              | 0 contact
            - else  
              = Contact.all.size > 1 ? "#{Contact.all.size} contacts" : "1 contact"
          h3
            - if Category.all.size == 0
              | 0 category
            - else
              = Category.all.size > 1 ? "#{Category.all.size} categories" : "1 category"
          h3
            - if Product.all.size == 0
              | 0 product
            - else
              = Product.all.size > 1 ? "#{Product.all.size} products" : "1 product"      
    .col-xs-6.col-md-6
      .product
        i.fa.fa-money
        .money
          h3
            - if Order.all.size == 0 && OrderMember.all.size == 0
              | 0 vnd in this month
            - else
              | Normal Orders
              br 
              br
              = @total
              | (vnd)
              br
              br
              | Member Orders
              br
              br
              = @total_member
              | (vnd)
