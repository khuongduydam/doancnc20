.col-xs-12.col-md-12.login[style="padding:0px"]
  .banner[style="font-family: 'Tangerine', serif;padding-left:50px;"]
    h1 Register & Login
  hr[style="border:1px solid red"] 
  .container.text-center[style="width: 330px;background-color:rgba(0,0,0,0);color:#337ab7;margin:45px 0;border:none;padding-left:50px"]
    .create.text-left[style="width:200%;font-family:'Ubuntu',serif;color: black"]
      h3 NEW CUSTOMERS
      p By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.
      = link_to "Create Account",new_user_registration_path,class:'btn btn-primary',style:'width: 30%;border-radius: 15px;background: #aad367;border-color: #aad367;'
    br  
    .registered.text-left[style="width:300%;font-family:'Ubuntu',serif;color: black"]
      h3 REGISTERED CUSTOMERS
      p If you have an account with us, please log in. 
    br  
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:'form-horizontal',id:'signinForm'},wrapper: :horizontal_form) do |f|
      = devise_error_messages!
      = f.input :username,label_html:{style:'font-weight:100;color:black'},class:'form-control',input_html:{style:'width:250%;border-radius:0px;margin-left:20px;color:black;font-family: arial,serif;'}
      = f.input :password,label_html:{style:'font-weight:100;color:black'},class:'form-control',input_html:{style:'width:250%;border-radius:0px;margin-left:20px;color:black;font-family:Ubuntu,serif;'}
      = f.submit "Đăng nhập", class:'btn btn-primary',style:'width: 80%;border-radius: 15px;background: #aad367;border-color: #aad367;margin-left:35%;'
      |
      .forgot-password[style="margin:-9% 0 0 141%;width:100%"]
        = render 'devise/shared/forgot_password'
    /= render 'devise/shared/omniauth'
javascript:
  $(document).ready(function(){
    $('abbr').remove(); 
    $('ul.nav li.dropdown').hover(function() { 
      $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(500); }, 
      function() { 
      $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(500); 
    });
    //validate sign in Form
    $('#signinForm').validate({
      rules: {
        "user[username]": {
          required: true,
          minlength:2
        },
        "user[password]": {
          required: true,
          minlength: 4
        }
      },
      messages: {
        "user[username]": {
          required: 'Please enter a username',
          minlength: 'Your username is too short'
        },
        "user[password]": {
          required: 'Please enter a password',
          minlength: 'Your password is too short'
        }
      },
      errorElement: 'em',
      errorPlacement: function(error, element){
        error.addClass('help-block');
        if(element.prop('type') === 'checkbox'){
          error.insertAfter(element.parent('label'));
        }
        else{
          error.insertAfter(element);
        }
      },
      highlight: function(element, errorClass, validClass){
        $(element).parents('.col-sm-9').addClass('has-error').removeClass('has-success');
      },
      unhighlight: function(element, errorClass, validClass){
        $(element).parents('.col-sm-9').addClass('has-success').removeClass('has-error');
      },
      submitHandler: function(form) {
        $('form').find(":submit").attr("disabled", true).attr("value","Submitting...");
        form.submit();
      }
    });
  });
