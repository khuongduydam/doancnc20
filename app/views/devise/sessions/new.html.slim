.col-xs-12.col-md-12.login[style="padding:0px"]
  .banner[style="font-family: 'Arial', serif;padding-left:50px;"]
    h1 = t('layouts.user_layout.title')
  hr[style="border:1px solid red"] 
  .container.text-center[style="width: 330px;background-color:rgba(0,0,0,0);color:#337ab7;margin:45px 0;border:none;padding-left:50px"]
    .create.text-left[style="width:200%;font-family:'Arial',serif;color: black"]
      h3 = t('layouts.user_layout.new_customers')
      p = t('layouts.user_layout.notice_customer')
      = link_to t('layouts.user_layout.account_create'),new_user_registration_path,class:'btn btn-primary',style:'width: 30%;border-radius: 15px;background: #aad367;border-color: #aad367;'
    br  
    .registered.text-left[style="width:300%;font-family:'Arial',serif;color: black"]
      h3 = t('layouts.user_layout.register_customer')
      p = t('layouts.user_layout.notice_register')
    br  
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:'form-horizontal',id:'signinForm'},wrapper: :horizontal_form) do |f|
      = devise_error_messages!
      .form-group[style="margin-left:-1px"]
        = f.input :username,label:t('layouts.user_layout.username'),label_html:{style:'font-weight:100;color:black;font-family:Arial'},class:'form-control',input_html:{style:'width:250%;border-radius:0px;margin-left:20px;color:black;font-family: arial,serif;'}
      .form-group[style="margin-left:-1px"]  
        = f.input :password,label:t('layouts.user_layout.password'),label_html:{style:'font-weight:100;color:black;padding-right:0;font-family:Arial'},class:'form-control',input_html:{style:'width:250%;border-radius:0px;margin-left:20px;color:black;font-family:Arial,serif;'}
      = f.submit I18n.t('layouts.user_layout.login'), class:'btn btn-primary',style:'width: 80%;border-radius: 15px;background: #aad367;border-color: #aad367;margin-left:35%;;font-family: arial'
      |
      .forgot-password[style="margin:-9% 0 0 150%;width:100%"]
        = render 'devise/shared/forgot_password'
    = render 'devise/shared/omniauth'
javascript:
  $(document).ready(function(){
    $('abbr').remove(); 
    $('ul.nav li.dropdown').hover(function() { 
      $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(500); }, 
      function() { 
      $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(500); 
    });
    //validate sign in Form
    $('#signinForm').validate({
      rules: {
        "user[username]": {
          required: true,
          minlength:2
        },
        "user[password]": {
          required: true,
          minlength: 4
        }
      },
      messages: {
        "user[username]": {
          required: 'Please enter a username',
          minlength: 'Your username is too short'
        },
        "user[password]": {
          required: 'Please enter a password',
          minlength: 'Your password is too short'
        }
      },
      highlight: function(element){
        $(element).closest('.form-group').addClass('has-error');
      },
      unhighlight: function(element){
        $(element).closest('.form-group').removeClass('has-error');
      },
      submitHandler: function(form) {
        $('form').find(":submit").attr("disabled", true).attr("value","Submitting...");
        form.submit();
      },
      errorClass :'help-block',
      errorPlacement: function(error, element){
        error.insertAfter(element);
      },
    });
  });
